// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

// Necessary for Next auth
model Account {
  id                String  @id @default(cuid())
  userId            String  @db.MediumText
  type              String  @db.MediumText
  provider          String
  providerAccountId String
  refresh_token     String? @db.MediumText
  access_token      String? @db.MediumText
  expires_at        Int?
  token_type        String? @db.MediumText
  scope             String? @db.MediumText
  id_token          String? @db.MediumText
  session_state     String? @db.MediumText
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String          @id @default(cuid())
  name          String?         @db.MediumText
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  role          Role            @default(pupil)
  accounts      Account[]
  sessions      Session[]
  tasterEnquiry TasterEnquiry[]
  Pupil         Pupil?
  pupilId       String?
}

enum Role {
  pupil
  teacher
  receptionist
  admin
  superAdmin
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Teacher {
  id           String         @id @default(cuid())
  fName        String
  lName        String
  email        String
  lesson       Lesson[]
  tasterLesson TasterLesson[]
  instrument   Instrument?    @relation(fields: [instrumentId], references: [id])
  instrumentId String?

  @@index([instrumentId])
}

model Lesson {
  id            String          @id @default(cuid())
  teacherId     String
  teacher       Teacher         @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  pupils        Pupil[]
  ///start times are stored as minutes from midnight so 0 = 00:00, 60 = 01:00, 120 = 02:00 etc.
  startTime     Int
  ///end times are stored as minutes from midnight so 0 = 00:00, 60 = 01:00, 120 = 02:00 etc.
  endTime       Int
  instrument    Instrument      @relation(fields: [instrumentId], references: [id])
  instrumentId  String
  day           Day             @relation(fields: [dayName], references: [name])
  dayName       String
  attendance    Attendance[]
  CatchupLesson CatchupLesson[]
  courseId      String?
  course        Course?         @relation(fields: [courseId], references: [name])
  book          Book?           @relation(fields: [bookId], references: [id])
  grade         Grade?          @relation(fields: [gradeId], references: [id])
  courseName    String?
  bookId        String?
  gradeId       String?
  lessonTypeId  String
  lessonType    LessonType      @relation(fields: [lessonTypeId], references: [id])

  @@index([dayName])
  @@index([teacherId])
  @@index([instrumentId])
  @@index([lessonTypeId])
  @@index([courseId])
  @@index([bookId])
  @@index([gradeId])
}

model LessonType {
  id          String   @id @default(cuid())
  name        String   @unique
  price       Decimal
  description String
  Lesson      Lesson[]
}

model CatchupLesson {
  id         String       @id @default(cuid())
  lesson     Lesson       @relation(fields: [lessonId], references: [id])
  lessonId   String
  date       DateTime
  startTime  Int
  endTime    Int
  attendance Attendance[]

  @@index([lessonId])
}

model TasterLesson {
  id            String          @id @default(cuid())
  teacherId     String?
  teacher       Teacher?        @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  pupils        Pupil[]
  //start and end times are stored as minutes from midnight so 0 = 00:00, 60 = 01:00, 120 = 02:00 etc.
  startTime     Int
  endTime       Int
  day           String
  tasterEnquiry TasterEnquiry[]

  @@index([teacherId])
}

model TasterEnquiry {
  id             String        @id @default(cuid())
  instrument     String
  otherInfo      String
  pupilId        String?
  pupil          Pupil?        @relation(fields: [pupilId], references: [id])
  tasterLessonId String?
  tasterLesson   TasterLesson? @relation(fields: [tasterLessonId], references: [id])
  User           User?         @relation(fields: [userId], references: [id])
  userId         String?

  @@index([pupilId])
  @@index([tasterLessonId])
  @@index([userId])
}

model Pupil {
  id            String          @id @default(cuid())
  fName         String
  mName         String?
  lName         String
  dob           DateTime
  email         String?         @unique
  phone         String?
  extraNeeds    String?
  addressLine1  String?
  addressLine2  String?
  postcode      String?
  lessons       Lesson[]
  tasterLessons TasterLesson[]
  enrolled      DateTime?
  droppedOut    DateTime?
  paymentType   String?
  parent        Pupil[]         @relation("ParentChildren")
  children      Pupil[]         @relation("ParentChildren")
  Attendance    Attendance[]
  payment       Payment[]
  tasterEnquiry TasterEnquiry[]
  userId        String?         @unique
  User          User?           @relation(fields: [userId], references: [id])
  GradeResult   GradeResult[]

  @@index([userId])
}

model Instrument {
  id       String    @id @default(cuid())
  teachers Teacher[]
  name     String
  courses  Course[]
  lesson   Lesson[]
  rooms Room[]
}

model Course {
  name                    String      @id
  instrumentId            String?
  instrument              Instrument? @relation(fields: [instrumentId], references: [id], onDelete: Cascade)
  description             String
  lessonLength            Int
  minAge                  Int
  maxAge                  Int
  maxClassSize            Int
  privateLessonsAvailable Boolean
  isPublic                Boolean
  Lesson                  Lesson[]
  youtubeVideoId          String?

  @@index([instrumentId])
}

model Book {
  id          String   @id @default(cuid())
  name        String
  price       String
  stockLevel  Int
  description String
  Lesson      Lesson[]
  Grade       Grade[]
}

model Grade {
  id          String        @id @default(cuid())
  level       Int
  examBoard   String
  bookId      String
  book        Book          @relation(fields: [bookId], references: [id])
  Lesson      Lesson[]
  GradeResult GradeResult[]

  @@index([bookId])
}

model GradeResult {
  id      String @id @default(cuid())
  pupilId String
  pupil   Pupil  @relation(fields: [pupilId], references: [id])
  grade   Grade  @relation(fields: [gradeId], references: [id])
  gradeId String
  /// Overall percentage
  mark    Int

  @@index([pupilId])
  @@index([gradeId])
}

model Room {
  id   String @id @default(cuid())
  name String @unique
  instruments Instrument[]
  pupilCapacity Int
}

model Day {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  openingTime Int
  closingTime Int
  lesson      Lesson[]
}

model Attendance {
  id              String         @id @default(cuid())
  pupil           Pupil          @relation(fields: [pupilId], references: [id])
  pupilId         String
  lesson          Lesson?        @relation(fields: [lessonId], references: [id])
  lessonId        String?
  mark            String
  date            DateTime
  CatchupLesson   CatchupLesson? @relation(fields: [catchupLessonId], references: [id])
  catchupLessonId String?

  @@index([pupilId])
  @@index([lessonId])
  @@index([catchupLessonId])
}

model Payment {
  id        String   @id @default(cuid())
  pupil     Pupil    @relation(fields: [pupilId], references: [id])
  pupilId   String
  amount    Int
  date      DateTime
  method    String
  reference String?
  detail    String?
  product   String
  settled   Boolean  @default(false)

  @@index([pupilId])
}
